#:kivy 2.0.0
<AddProfileScreen>:
    FloatLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        canvas:
            Color:
                rgba: 0, 0, 0, .5
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'ADD'
            font_size: '40sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': .5, 'center_y': .96}
            #pos:0, 280
        Label:
            text: 'Name'
            font_size: '20sp'
            color: 0, 0, 0, 1        
            #pos:0, 225
            pos_hint: {'center_x': .5, 'center_y': .88}
        TextInput:
            id: name
            multiline: False
            font_size: '15sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': .5, 'center_y': .83}
            #pos:200, 450
            size_hint: .5, .05
        Label:
            text: 'Phone Number'
            font_size: '20sp'
            color: 0, 0, 0, 1
            #pos:0, 120
            pos_hint: {'center_x': .5, 'center_y': .77}
        TextInput:
            id: number
            multiline: False
            font_size: '15sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': .5, 'center_y': .72}
            #pos:200, 340
            size_hint: .5, .05
        Label:
            text: 'Email'
            font_size: '20sp'
            color: 0, 0, 0, 1
            #pos:0, 20
            pos_hint: {'center_x': .5, 'center_y': .66}
        TextInput:
            id: email
            multiline: False
            font_size: '15sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': .5, 'center_y': .61}
            #pos:200, 100
            size_hint: .5, .05
        Label:
            text: 'Type'
            font_size: '20sp'
            color: 0, 0, 0, 1
            pos_hint: {'x': 0, 'center_y': .56}
        Spinner:
            id: spinner_type
            text: 'Air'
            values: ['Air', 'Nitrox','Trimix']
            pos_hint: {'center_x': .5, 'center_y': .51}
            # on_text: root.spinner_clicked_type(spinner_type.text)
            size_hint: .5, .05
        Label:
            text: 'Note'
            font_size: '20sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': .5, 'center_y': .46}
        TextInput:
            id: note
            multiline: True
            font_size: '15sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': .5, 'center_y': .32}
            size_hint: .5, .23
        Button:  
            text: 'Confirm'
            font_size: '15sp'
            pos_hint: {'center_x': .5, 'center_y': .15}
            size_hint: .5, .1
            on_press: root.add_profile(name.text, number.text, email.text, spinner_type.text, spinner_cert.text)
        Button:
            pos_hint: {'top': 1, 'left': 0.8}
            size_hint: 0.1, 0.02
            text: 'Go Back'
            on_release: app.change_screen('profile_screen')