<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos


        GridLayout:
        
            rows: 1
            pos_hint: {'top': 1, 'left': 1}
            size_hint: 1, .15
            Image:
                source: 'pic/gasblendpic.png'

        GridLayout:
            rows:4
            pos_hint: {'top': 0.85, 'left': 0}
            size_hint: 1, .35
            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'O2%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.2, 0.2 

            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'N2%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.2, 0.2 



            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'He%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2 
                
                
                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.2, 0.2 

            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'Pressure%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.2, 0.2 


        GridLayout:

            rows: 4
            pos_hint: {'top': 0.50, 'left': 1}
            size_hint: 1, .35

            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'O2%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.2, 0.2 

            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'N2%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.2, 0.2 



            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'He%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2 
                
                
                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.2, 0.2 

            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'Pressure%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.2, 0.2 
            

        FloatLayout:
            pos_hint: {'top': 0.15, 'left': 1}
            size_hint: 1, .15
            Button:
                text: 'Info'
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                size_hint: 0.1, 0.1
            Button:
                text: 'Settings'
                pos_hint: {'y': 0.1, 'x': 0}
                size_hint: 0.1, 0.1
                on_release:
                    app.change_screen('settings_screen')
            Button:
                text: 'Profiles'
                pos_hint: {'y': 0.1, 'x': 0.1}
                size_hint: 0.1, 0.1
                on_release:
                    app.change_screen('profile_screen')
            