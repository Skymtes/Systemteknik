#:kivy 2.0.0
<ProfileScreen>:
    GridLayout:
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
        rows:2
        FloatLayout:
            Button:
                pos_hint: {'center_x':0.5, 'top':1}
                size_hint: 0.8, 0.8
                text:
                    'ADD'
                on_release:
                    app.change_screen('add_profile_screen')
        FloatLayout:
            Button:
                pos_hint: {'center_x':0.5, 'top':1}
                size_hint: 0.8, 0.8
                text:
                    'RESERVED'
                on_release:
                    app.change_screen('reserved_profile_screen')