#:kivy 2.0.0


<ProfileScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos   
        Button:
            pos_hint: {'top': 1, 'left': 0.8}
            size_hint: 0.15, 0.075
            text: 'Go Back'
            on_release:
                root.manager.transition.direction = 'right' 
                root.manager.current = 'home_screen'
        Button:
            pos_hint: {'center_x':0.5, 'center_y':0.7}
            size_hint: 0.8, 0.25
            text:
                'Create New Customer'
            on_release:
                root.manager.transition.direction = 'left' 
                root.manager.current = 'add_profile_screen'
        Button:
            pos_hint: {'center_x':0.5, 'center_y':0.35}
            size_hint: 0.8, 0.25
            text:
                'Current Customer'
            on_release:
                root.manager.transition.direction = 'left' 
                root.manager.current = 'reserved_profile_screen'
                root.on_reserved_press()
    
    