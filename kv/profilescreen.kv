#:kivy 2.0.0
<ProfileScreen>:
    GridLayout:
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos   
        rows:3
        FloatLayout:
            Button:
                pos_hint: {'top': 1, 'left': 0.8}
                size_hint: 0.15, 0.25
                text: 'Go Back'
                on_release:
                    root.manager.transition.direction = 'right' 
                    root.manager.current = 'home_screen'

        FloatLayout:
            Button:
                pos_hint: {'center_x':0.5, 'top':1}
                size_hint: 0.8, 0.8
                text:
                    'Create New Profile'
                on_release:
                    root.manager.transition.direction = 'left' 
                    root.manager.current = 'add_profile_screen'
        FloatLayout:
            Button:
                pos_hint: {'center_x':0.5, 'top':1}
                size_hint: 0.8, 0.8
                text:
                    'Current Profiles'
                on_release:
                    root.manager.transition.direction = 'left' 
                    root.manager.current = 'reserved_profile_screen'
                    root.on_reserved_press()
        
        