#:kivy 2.0.0
<ProfileScreen>:
    GridLayout:
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos   
        rows:2
        FloatLayout:
            Button:
                pos_hint: {'center_x':0.5, 'top':1}
                size_hint: 0.8, 0.8
                text:
                    'Create new profile'
                on_release:
                    root.manager.current = 'add_profile_screen'
        FloatLayout:
            Button:
                pos_hint: {'center_x':0.5, 'top':1}
                size_hint: 0.8, 0.8
                text:
                    'Current profiles'
                on_release:
                    root.manager.current = 'reserved_profile_screen'
                    root.on_reserved_press()
        
        Button:
            pos_hint: {'top': 1, 'left': 0.8}
            size_hint: 0.1, 0.02
            text: 'Go Back'
            on_release: root.manager.current = 'home_screen'