#:kivy 2.0.0
<SettingsScreen>:
    price_oxygen : price_oxygen
    price_air : price_air
    price_helium : price_helium
    price_service_fee : price_service_fee 
    price_tank_fee : price_tank_fee
    #cylinder_size : cylinder_size
    #cyliner_maximum_pressure : cyliner_maximum_pressure







    FloatLayout:
        size_hint:1,1
        pos_hint:{'top':1, 'left':1}
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos







        FloatLayout:
            
            pos_hint:{'top': 1, 'left':1}
            size_hint: 1,0.15




            Button:
                pos_hint: {'top': 1, 'left': 0.8}
                size_hint: 0.15, 0.5
                text: 'Go Back'
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'home_screen'
                    root.button()

            Image:
                source: 'pic/gas_price.png'
                pos_hint:{'top':1, 'center_x':0.5}
                size_hint: 0.6,0.6

            Spinner:
                id : spinner_id
                pos_hint:{'top':1, 'right':1}
                size_hint: 0.2, 0.5
                text:'Currency'
                values: ['SEK', 'EUR', 'USD']
                on_text: root.spinnerclick(spinner_id.text)

        GridLayout:
            rows: 7
            pos_hint: {'top': 0.8, 'left': 0}
            size_hint: 1, .6


            FloatLayout:
                Label:
                    color: 0 , 0 , 0, 1
                    text:'Oxygen Fee\n(per Liter)'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, 0.5
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.6
                    id: price_oxygen
                    text: '0'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

            FloatLayout:
                Label:
                    color: 0, 0, 0, 1
                    text:'Helium Fee\n(per Liter)'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, 0.5
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.6
                    id: price_helium
                    text: '0'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

            FloatLayout:
                Label:
                    color: 0, 0, 0, 1
                    text:'Air Fee\n(per Liter)'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, 0.5
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.6
                    id : price_air
                    text: '0'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'


            FloatLayout:
                Label:
                    color: 0, 0, 0, 1
                    text:'Tank Fee\n(per Tank)'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, 0.5
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.6 
                    id: price_tank_fee
                    text: '0'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

            FloatLayout:
                Label:
                    color: 0, 0, 0, 1
                    text:'Service Fee\n(per Filling)'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, 0.5
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.6
                    id: price_service_fee
                    text: '0'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

            FloatLayout:
                Label:
                    color: 0, 0, 0, 1
                    text:'Tank Capacity\n(Liter)'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, 0.5
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.6
                    id: tank_capacity
                    text: '0'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

            FloatLayout:
                Label:
                    color: 0, 0, 0, 1
                    text:'Depth\n(Meters)'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, 0.5
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.6
                    id: tank_depth
                    text: '0'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

        FloatLayout:
            pos_hint: {'top': 0.4, 'left': 1}
            size_hint: 1, .5

            Button:
                pos_hint:{'center_x': 0.5, 'center_y': .5}
                size_hint: 0.3, .2
                text:'Confirm'
                on_release:
                    root.confirm()











