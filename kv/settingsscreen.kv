#:kivy 2.0.0
<SettingsScreen>:
    price_oxygen : price_oxygen
    price_air : price_air
    price_helium : price_helium
    price_service_fee : price_service_fee 
    price_tank_fee : price_tank_fee
    #cylinder_size : cylinder_size
    #cyliner_maximum_pressure : cyliner_maximum_pressure







    FloatLayout:
        size_hint:1,1
        pos_hint:{'top':1, 'left':1}
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos







        FloatLayout:
            
            pos_hint:{'top': 1, 'left':1}
            size_hint: 1,0.15




            Button:
                pos_hint:{'top':1, 'left':0.8}
                size_hint: 0.1,0.3
                on_release:
                    root.manager.current = 'home_screen'
                    root.button()

                text: 'Go Back'


            Image:
                source: 'pic/gas_price.png'
                pos_hint:{'top':1, 'center_x':0.5}
                size_hint: 0.6,0.6

            Spinner:
                id : spinner_id
                pos_hint:{'top':1, 'right':1}
                size_hint: 0.2,0.3
                text:'Currency'
                values: ['SEK', 'EURO', 'DOLLAR']
                on_text: root.spinnerclick(spinner_id.text)

        GridLayout:
            rows:5
            pos_hint: {'top': 0.85, 'left': 0}
            size_hint: 1, .45


            FloatLayout:
                Label:
                    color: 0,0,0,1
                    text:'Oxygen'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2
                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.55
                    id: price_oxygen
            FloatLayout:
                Label:
                    color: 0,0,0,1
                    text:'Air'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2
                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.55
                    id : price_air
            FloatLayout:
                Label:
                    color: 0,0,0,1
                    text:'Helium'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2
                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.55
                    id: price_helium 
            FloatLayout:
                
                Label:
                    color: 0,0,0,1
                    text:'Service Fee'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2
                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.55
                    id: price_service_fee 
            FloatLayout:
                Label:
                    color: 0,0,0,1
                    text:'Tank Fee'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2
                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.55 
                    id: price_tank_fee


        FloatLayout:

            
            size_hint: 1, 0.25
            pos_hint: {'top':0.4, 'left':1}
            Button:
                pos_hint:{'top':1, 'center_x':0.5}
                size_hint: 0.2,0.2
                text:'Confirm'
                on_release:
                    root.confirm()











