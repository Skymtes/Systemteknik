#:kivy 2.0.0
<SelectCustomerScreen>:
    FloatLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        pos_hint: {'center_x': .5, 'center_y': .5}
        canvas:
            Color:
                rgba: 0, 0, 0, .5
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            pos_hint: {'top': 1, 'left': 0.8}
            size_hint: 0.15, 0.075
            text: 'Go Back'
            on_release:
                root.manager.transition.direction = 'right' 
                root.manager.current = 'home_screen'  
        Label:
            text: 'Customers'
            font_size: '40sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': .5, 'center_y': .96}
        
    ScrollView:
        do_scroll_x: False
        size_hint: 1, .87
        GridLayout:
            id: select_customer_grid
            cols: 2
            background_color: 0, 1, 0, 1
            padding: 0
            spacing: 0
            size_hint: 1, None
            row_default_height: '40dp'
            row_force_default: False
            height: self.minimum_height
            width: self.minimum_width