#:kivy 2.0.0
<HomeScreen>:
    old_otwo : old_otwo
    old_he : old_he 
    old_pressure : old_pressure 
    new_otwo : new_otwo
    new_he : new_he 
    new_pressure : new_pressure 

    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos


        FloatLayout:
            pos_hint: {'top': 1, 'left': 1}
            size_hint: 1, .15
            Image:
                pos_hint:{'top':1, 'center_x':0.5}
                size_hint: 1,1
                source: 'pic/ny_gas.png'

           
            #Button:
            #    text: 'Next'
            #    pos_hint:{'top':0.9, 'x':0.9}
            #    size_hint: 0.1,0.1
            #    on_release:
            #        root.manager.current = 'select_customer_screen'

        FloatLayout:
            pos_hint: {'top': 0.85, 'left':1}
            size_hint: 1, 0.1

            Label:
                color: 0,0,0,1
                text: 'Old Mix'
                pos_hint: {'top' : 1, 'center_x':0.4} 

            Label:
                color: 0,0,0,1
                text: 'New Mix'
                pos_hint: {'top' : 1, 'center_x':0.6}



        GridLayout:
            rows:5
            pos_hint: {'top': 0.7, 'left': 0}
            size_hint: 1, .55
            
            
            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'O2%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, 0.5

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.4}
                    size_hint: 0.1, 0.5
                    id : old_otwo
                    text: '21'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.6}
                    size_hint: 0.1, 0.5
                    id : new_otwo
                    text: '36'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'


            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'He%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, .5 
                
                TextInput:
                    pos_hint:{'top':1, 'center_x':0.4}
                    size_hint: 0.1, 0.5
                    id: old_he
                    text: '0'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.6}
                    size_hint: 0.1, 0.5
                    id: new_he
                    text: '0'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'Pressure (Bar)'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, 0.5

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.4}
                    size_hint: 0.1, 0.5
                    id : old_pressure
                    text: '0'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.6}
                    size_hint: 0.1, 0.5
                    id : new_pressure
                    text: '200'
                    input_filter: 'float'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

            FloatLayout:
                Label:
                    color: 0, 0, 0, 1
                    text:'Tank Capacity\n(Liter)'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.4, 0.5
                    halign: 'center'
                    valign: 'middle'

                Spinner:
                    text: 'Capacity'
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.6
                    id: tank_capacity
                    values: ['1.8', '3', '5', '7', '8', '10', '11', '12', '15', '2x6', '2x7', '2x10', '2x12']
                  
            FloatLayout:
                Button:
                    text: 'Calculate'
                    pos_hint: {'center_x': 0.5, 'center_y': .7}
                    size_hint: .3, .7
                    on_release:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'more_info_screen'
                        root.btn()

        FloatLayout:
            pos_hint: {'top': .4, 'left': 1}
            size_hint: 1, .4
            
            Button:
                text: 'Customers'
                pos_hint: {'y': 0.0, 'x': 0}
                size_hint: 0.2, 0.2
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'reserved_profile_screen'
                    root.on_reserved_press()
            
            Button:
                text: 'Settings'
                pos_hint: {'y': 0, 'x': 0.8}
                size_hint: 0.2, 0.2
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'settings_screen'