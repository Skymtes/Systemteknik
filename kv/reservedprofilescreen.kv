#:kivy 2.0.0
<ReservedProfileScreen>:
    FloatLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        pos_hint: {'center_x': .5, 'center_y': .5}
        canvas:
            Color:
                rgba: 0, 0, 0, .5
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size  
        Button:
            pos_hint: {'top': 1, 'left': 0.8}
            size_hint: 0.15, 0.075
            text: 'Go Back'
            on_release:
                root.manager.transition.direction = 'right' 
                root.manager.current = 'home_screen' 
        Button:
            pos_hint: {'top': 1, 'right': 1}
            size_hint: 0.15, 0.075
            text: 'Add'
            on_release:
                root.manager.transition.direction = 'right' 
                root.manager.current = 'add_profile_screen' 
        Label:
            text: 'Customers'
            font_size: '40sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': .5, 'center_y': .96}
        ScrollView:
            top: 5
            do_scroll_x: False
            GridLayout:
                id: box
                cols: 1
                size_hint: 1, None
                row_default_height: '40dp'
                row_force_default: False
                spacing: 0, 0
                padding: 0, 0
                #height: self.minimum_height



                
