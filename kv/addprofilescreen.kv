<AddProfileScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos 

        FloatLayout:

            pos_hint: {'top': 1, 'left': 1}
            size_hint: 1, .15
            Label:
                color: 0,0,0,1
                pos_hint:{'top':0.8, 'center_x':0.5}
                size_hint: 0.2,0.2
                text: 'Add Profile'
            Button:
                pos_hint:{'top':0.95, 'left':0.8}
                size_hint: 0.1,0.05
                text:
                    'GO BACK'
                                

        GridLayout:
            rows: 9
            pos_hint:{'top': 0.85, 'left':1}
            size_hint: 1,1
            canvas:
                Color:
                    rgb: 0,1,0,1
                Rectangle:
                    size: self.size
                    pos: self.pos

            FloatLayout:
                canvas:
                    Color:
                        rgb: 0,0,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.3,0.3
                    text:'hej'
                TextInput:
                    pos_hint:{'top':1, 'center_x':0.5}
                    size_hint: 0.1, 0.55