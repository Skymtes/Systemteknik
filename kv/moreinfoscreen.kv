#:kivy 2.0.0
<MoreInfoScreen>:
#id : fill, ger receptet på önskad blandning
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                pos:self.pos
                size:self.size






        Button:
            pos_hint: {'top': 1, 'left': 0.8}
            size_hint: 0.15, 0.075
            text: 'Go Back'
            on_release: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'home_screen'
        Button:
            pos_hint: {'top': 1, 'right': 1}
            size_hint: 0.15, 0.075
            text: 'Assignment'
            on_release: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'select_customer_screen'
                root.customer_select()










        GridLayout:
            rows:2
            size_hint: 1, 0.15
            pos_hint: {'top':1, 'left':1}
            
            GridLayout:
                cols:2
                Label:
                    bold: True
                    color:0,0,0,1
                    text:'Max Depth'
                Label:
                    bold: True
                    color:0,0,0,1
                    text:'Min Depth'


            GridLayout:
                cols:2
                Label:
                    color:0,0,0,1
                    text:''
                    id: max_depth
                Label:
                    color:0,0,0,1
                    text:''
                    id: min_depth


        GridLayout:
            rows:2
            size_hint: 1, 0.3
            pos_hint: {'top':0.9, 'left':1}

            Label:
                color: 0,0,0,1
                text:'Blending Instructions'
                font_size: '26sp'
                bold: True
                halign: 'center'


            Label:
                color: 0,0,0,1
                id: fill
                text:''
                font_size: '16sp'
                halign: 'center'

        GridLayout:
            rows:2
            size_hint: 1, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                color: 0,0,0,1
                text:'Price'
                font_size: '20sp'
                bold: True
                halign: 'center'

            Label:
                id: tank_price
                color: 0,0,0,1
                pos_hint: {'top': 0.7, 'left': 1}
                text: '0'
                font_size: '16sp'
                halign: 'center'
                valign: 'middle'

        FloatLayout:
            size_hint: 1, 0.15
            pos_hint: {'top':0.7, 'left':1}

