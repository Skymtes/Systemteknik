#:kivy 2.0.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
<ProfileInfoScreen>:
    FloatLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        canvas:
            Color:
                rgba: 0, 0, 0, .5
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: name
            text: root.name
            font_size: '30sp'
            bold: True
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint: {'center_x': .5, 'center_y': .96}
            color: 0, 0, 0, 1
        Button:
            pos_hint: {'top': 1, 'left': 1}
            size_hint: 0.15, 0.05
            text: 'Go Back'
            on_release: 
                root.manager.transition.direction = 'right' 
                root.manager.current = 'reserved_profile_screen'
        Button:
            text: 'Remove Profile'
            pos_hint: {'top': 1, 'right': 1}
            size_hint: 0.15, 0.05
            on_release: 
                root.alert_remove_profile(name.text)
                root.manager.transition.direction = 'right'
                root.manager.current = 'reserved_profile_screen'
        GridLayout:
            cols: 2
            id: profile_info_box
            top: name.y - 50
            padding: 10
            size_hint: 1, .3
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                Label:
                    text: 'Mobile Nr'
                    pos_hint: {'center_x': .5, 'center_y': .9}                    
                    bold: True
                    font_size: '20sp'
                    color: 0, 0, 0, 1
                    
                Label:
                    id: number
                    pos_hint: {'center_x': .5, 'center_y': .7}
                    text: root.number
                    font_size: '20sp'
                    color: 0, 0, 0, 1
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                Label:
                    text: 'Email'
                    bold: True
                    font_size: '20sp'
                    color: 0, 0, 0, 1
                Label:
                    id: email
                    text: root.email
                    font_size: '20sp'
                    #text_size: self.width -25, None
                    text_align: 'center'
                    color: 0, 0, 0, 1
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                Label:
                    text: 'Certificate'
                    bold: True
                    font_size: '20sp'
                    color: 0, 0, 0, 1
                Label:
                    id: gas_type
                    text: root.gas_type
                    font_size: '20sp'
                    color: 0, 0, 0, 1
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                Label:
                    text: 'Date'
                    bold: True
                    font_size: '20sp'
                    color: 0, 0, 0, 1
                Label:
                    id: date
                    text: root.date
                    font_size: '20sp'
                    color: 0, 0, 0, 
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                Label:
                    text: 'Price'
                    bold: True
                    font_size: '20sp'
                    color: 0, 0, 0, 1
                Label:
                    id: price
                    text: root.price + 'â‚¬'
                    font_size: '20sp'
                    color: 0, 0, 0, 1
        GridLayout:
            top: profile_info_box.y
            cols: 1
            size_hint: 1, .5
            padding: 10
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, .25
                pos_hint: {'center_y': .43}
                canvas:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                Label:
                    text: 'Note'
                    bold: True
                    font_size: '20sp'
                    color: 0, 0, 0, 1
                Label:
                    id: note
                    text: root.note
                    font_size: '20sp'
                    color: 0, 0, 0, 1
                    text_size: self.width, None
            ScrollView:
                do_scroll_x: False
                size_hint: 1, 0.75
                pos_hint: {'center_y': .2}
                canvas:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                GridLayout:
                    id: gas_info_box
                    cols: 1
                    size_hint: 1, None
                    row_default_height: '40dp'
                    row_force_default: False
                    spacing: 0, 0
                    padding: 0, 0
                    height: self.minimum_height
                    width: self.minimum_width
                    # canvas:
                    #     Color:
                    #         rgba: 1, 0, 0, 1
                    #     Line:
                    #         rectangle: self.x, self.y, self.width, self.height
                    Label:
                        text: 'The Mix'
                        pos_hint: {'center_x': .5, 'center_y': .8}
                        bold: True
                        font_size: '20sp'
                        color: 0, 0, 0, 1
                    # Label:
                    #     pos_hint: {'center_x': .2, 'center_y': .2}
                    #     id: mix
                    #     text: root.mix
                    #     font_size: '10sp'
                    #     color: 0, 0, 0, 1
                    #     #text_size: None , self.height