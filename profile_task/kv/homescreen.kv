#:kivy 2.0.0
<HomeScreen>:
    old_otwo : old_otwo
    old_he : old_he 
    old_pressure : old_pressure 
    new_otwo : new_otwo
    new_he : new_he 
    new_pressure : new_pressure 

    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos


        FloatLayout:
            pos_hint: {'top': 1, 'left': 1}
            size_hint: 1, .15
            Image:
                pos_hint:{'top':1, 'center_x':0.5}
                size_hint: 1,1
                source: 'pic/gasblendpic.png'


            Button:
                text: 'Next'
                pos_hint:{'top':0.9, 'x':0.9}
                size_hint: 0.1,0.1
                on_release:
                    root.manager.current = 'select_customer_screen'

        FloatLayout:
            pos_hint: {'top': 0.85, 'left':1}
            size_hint: 1, 0.1

            Label:
                color: 0,0,0,1
                text: 'Old Mix'
                pos_hint: {'top' : 1, 'center_x':0.35} 

            Label:
                color: 0,0,0,1
                text: 'New Mix'
                pos_hint: {'top' : 1, 'center_x':0.7}



        GridLayout:
            rows:4
            pos_hint: {'top': 0.7, 'left': 0}
            size_hint: 1, .55


            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'O2%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.35}
                    size_hint: 0.1, 0.55
                    id : old_otwo

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.7}
                    size_hint: 0.1, 0.55
                    id : new_otwo




            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'He%'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2 
                
                TextInput:
                    pos_hint:{'top':1, 'center_x':0.35}
                    size_hint: 0.1, 0.55
                    id: old_he

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.7}
                    size_hint: 0.1, 0.55
                    id: new_he

            FloatLayout:
                Label:
                    color:0,0,0,1
                    text: 'Pressure'
                    pos_hint:{'top':1, 'left':1}
                    size_hint: 0.2, 0.2

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.35}
                    size_hint: 0.1, 0.55
                    id : old_pressure

                TextInput:
                    pos_hint:{'top':1, 'center_x':0.7}
                    size_hint: 0.1, 0.55
                    id : new_pressure


            












        FloatLayout:
            pos_hint: {'top': 0.15, 'left': 1}
            size_hint: 1, .15
            Button:
                text: 'Info'
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                size_hint: 0.1, 0.1
                on_release:
                    root.manager.current = 'more_info_screen'
                    root.btn()
            Button:
                text: 'Settings'
                pos_hint: {'y': 0.1, 'x': 0}
                size_hint: 0.1, 0.1
                on_release:
                    root.manager.current = 'settings_screen'
            Button:
                text: 'Profiles'
                pos_hint: {'y': 0.1, 'x': 0.1}
                size_hint: 0.1, 0.1
                on_release: root.manager.current = 'profile_screen'