#:kivy 2.0.0
<ReservedProfileScreen>:
    FloatLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        canvas:
            Color:
                rgba: 0, 0, 0, .5
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Profiles'
                font_size: '40sp'
                color: 0, 0, 0, 1
                pos_hint: {'center_x': .5, 'center_y': .96}
            Button:
                text: 'simon vad'
                on_press: app.change_screen('profile_info_screen')
            Button:
                text: 'johan var' 
            Button:
                text: 'sara who'
